				                        </div>
				                        <div class="col-2">
				                            <field name="repayment_weighted" />
				                        </div>
				                    </div>
				                </div>
				                <div class="col-12">
				                    <div class="row">
									<div class="col-3">
											Truck Ownershp
										</div>
				                        <div class="col-3">
				                            <field name="truck_ownership" />
				                        </div>
				                        <div class="col-2">
				                            <field name="truck_score" />
				                        </div>
