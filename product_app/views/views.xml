				                        <div class="col-3">
											Business Type
										</div>
				                        <div class="col-3">
				                            <field name="business_type" />
				                        </div>
				                        <div class="col-2">
				                            <field name="business_score" />
				                        </div>
				                        <div class="col-2">
				                            <field name="business_weight" />
				                        </div>
				                        <div class="col-2">
				                            <field name="business_weighted" />
				                        </div>
				                    </div>
				                </div>
