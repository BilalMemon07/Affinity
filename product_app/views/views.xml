										<div class="col-2 ">
										<field name="total_weight" />
										</div>
									</div>
								</div>
								
							<div class="col-12">
								<div class="row">
									<div class="col-8">
										<button class="oe_highlight" name="risk_calculation" type="object" attrs="{'invisible':[('related_stage_name','=', 'Business Team')]}">
											Apply Score Calculation
										</button>
									</div>
