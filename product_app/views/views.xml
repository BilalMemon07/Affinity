				                        <div class="col-3">
				                            <field name="no_of_years" />
				                        </div>
				                        <div class="col-2">
				                            <field name="years_score" />
				                        </div>
				                        <div class="col-2">
				                            <field name="years_weight" />
				                        </div>
				                        <div class="col-2">
				                            <field name="years_weighted" />
				                        </div>
				                    </div>
				                </div>
				                <div class="col-12">
				                    <div class="row">
									<div class="col-3">
											Customer Type
										</div>
				                        <div class="col-3">
				                            <field name="customer_type" />
				                        </div>
				                        <div class="col-2">
				                            <field name="customer_score" />
				                        </div>
				                        <div class="col-2">
				                            <field name="customer_weight" />
				                        </div>
				                        <div class="col-2">
				                            <field name="customer_weighted" />
				                        </div>
				                    </div>
				                </div>
				                <div class="col-12">
				                    <div class="row">
									<div class="col-3">
											PEP
										</div>
				                        <div class="col-3">
				                            <field name="pep" />
				                        </div>
				                        <div class="col-2">
				                            <field name="pep_score" />
				                        </div>
				                        <div class="col-2">
				                            <field name="pep_weight" />
				                        </div>
				                        <div class="col-2">
